%header.header-right
  .header-right__group
    =@group.name
  .header-right__member
    - @group.users.each do |user|
      = user.name
  %button.header-right__edit Edit
= render "shared/side-bar"
.main--contents
  = render @messages

  / .main--contents__name-date
